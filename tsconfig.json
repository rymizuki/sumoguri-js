{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {},
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
